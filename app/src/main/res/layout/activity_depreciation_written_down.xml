<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/r"
    android:padding="18dp"
    android:scrollbars="none"
    android:id="@+id/written_scroll_view"
    tools:context=".activity.DepreciationWrittenDown">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!--    Heading-->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Depreciation Written down Method"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#051573"
        android:textSize="36sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:gravity="center"
        app:fontFamily="cursive" />

    <!--    1st et head-->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_marginTop="10dp"
        android:text="Amount"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp" />


    <!--    1st et-->
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Amount"
        android:inputType="number"
        android:layout_below="@id/textView4"
        android:textSize="18sp"/>



<!--    2nd et head-->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvage Cost"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:layout_below="@id/editText"
        android:layout_marginTop="10dp"/>

    <!--    2nd et-->
    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/textView5"
        android:hint="Enter Salvage Cost"
        android:textSize="18sp"
        android:inputType="number" />

<!--    3rd et head-->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time(in years)"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:layout_below="@id/editText2"
        android:layout_marginTop="10dp"/>

    <!--    3r et-->
    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Time"
        android:inputType="number"
        android:layout_below="@id/textView6"
        android:textSize="18sp"/>

    <!--    4th et head-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Depreciation Rate"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:layout_below="@id/editText3"
        android:layout_marginTop="10dp"/>

    <!--    4th et-->
    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Depreciation Rate"
        android:inputType="number"
        android:layout_below="@id/textView" />

<!--    1st result head-->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText4"
        android:layout_marginTop="15dp"
        android:text="Depreciation Amount:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp" />

<!--    2nd res head-->
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asset value:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:layout_below="@id/textView7"
        android:layout_marginTop="15dp"/>

<!--    1st res-->
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="15dp"
        android:layout_below="@id/editText4"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:visibility="invisible"/>

<!--    2nd res-->
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asset_value"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="15dp"
        android:layout_below="@id/textView10"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:visibility="invisible"/>

    <!--    Calculate-->
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rounded"
        android:text="Calculate"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorHint="#777777"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textView11"/>

    </RelativeLayout>
</ScrollView>